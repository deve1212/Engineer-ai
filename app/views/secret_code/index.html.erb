
<form action="/generate_secret_codes" method="post">
  <div class="form-group  mb-2">
    <label for="exampleFormControlSelect1">How many secret codes</label>
    <select name="count" class="form-control" id="exampleFormControlSelect1">
      <option>1</option>
      <option selected="selected">10</option>
      <option>20</option>
      <option>50</option>
      <option>100</option>
    </select>
  </div>
  <button type="submit" class="btn btn-primary mb-2">Confirm identity</button>
</form>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Code</th>
      <th scope="col">User Id</th>
    </tr>
  </thead>
  <tbody>
  	<%@secret_codes.each do |secret_code|%>
    <tr>
      <th scope="row"><%=secret_code.id%></th>
      <td><%=secret_code.code%></td>
      <td><%=secret_code.user.email if secret_code.user%></td>
    </tr>
    <%end%>
  </tbody>
</table>


  </tbody>
</table>